{
  "id": "plaid-sync-addon",
  "name": "Plaid Sync",
  "version": "1.0.0",
  "description": "Sync your financial accounts with Plaid",
  "author": "Wealthfolio",
  "main": "dist/addon.js",
  "sdkVersion": "2.0.0",
  "enabled": true,
  "permissions": [
    {
      "category": "accounts",
      "functions": ["getAll", "get", "create", "update"],
      "purpose": "Create and manage Plaid-linked accounts"
    },
    {
      "category": "activities",
      "functions": ["getAll", "import", "checkImport", "create", "saveMany"],
      "purpose": "Import and sync transactions from Plaid"
    },
    {
      "category": "assets",
      "functions": ["getAll", "get"],
      "purpose": "Resolve securities and map Plaid assets"
    },
    {
      "category": "secrets",
      "functions": ["get", "set", "delete"],
      "purpose": "Securely store Plaid credentials and access tokens"
    },
    {
      "category": "ui",
      "functions": ["sidebar.addItem", "router.add"],
      "purpose": "Add sidebar navigation and routes"
    },
    {
      "category": "query",
      "functions": ["getClient", "invalidateQueries"],
      "purpose": "Invalidate cache after sync to refresh UI"
    }
  ]
}
